@using Blog_MVCProject.Classes;
@using Blog_MVCProject.Models

@model List<Post>

@{
    ViewBag.Title = "Index";

}

<div class="jumbotron">
    <h2>Blog - All Posts</h2>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Content
        </th>
        <th>
            Date
        </th>
        <th>
            Author
        </th>

        <th>
            Comments
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Tools.CutText(item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.FullName)
            </td>
            <td>
                @foreach (var comment in item.Comments)
                {
                    <div>
                        @Html.DisplayFor(modelComment => comment.Text)
                    </div>
                }
            </td>
            <td>
                @if (User.IsInRole("Admins") || User.Identity.Name == item.Author.UserName)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @:|
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) @:|
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
                else
                {
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
