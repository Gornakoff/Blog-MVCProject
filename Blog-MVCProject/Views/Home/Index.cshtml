@using Blog_MVCProject.Models;
@using Blog_MVCProject.Classes;

@{
    ViewBag.Title = "Home Page";
}

@model List<Post>

<div class="jumbotron">
    <h2>Blog - Latest Posts</h2>
</div>

<section class="row">
    @foreach (var post in Model)
    {
        <article class="post col-md-6">
            <h2><a href="/Posts/Details/@post.Id">@post.Title</a></h2>
            <div>
                <i>Published on @post.Date</i>
            </div>
            <div>
                @if (post.Author != null)
                {
                    <i>by @post.Author.FullName (@post.Author.UserName)</i>
                }
            </div>
            <div>
                @Tools.CutText(post.Body)
            </div>
        </article>
    }
</section>